{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "edge": ["projects/edge/src/public_api", "dist/edge"],
      "edge/*": ["projects/edge/src/public_api", "dist/edge/*"],
      "ngx-formly-kendo": ["projects/ngx-formly-kendo/src/public_api", "dist/ngx-formly-kendo"],
      "ngx-formly-kendo/*": ["projects/ngx-formly-kendo/src/public_api", "dist/ngx-formly-kendo/*"]
    }
  }
}
